generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Delivery {
  id        String   @id @default(uuid())
  recipient String
  status    String
  createdAt DateTime @default(now())
}

model Courier {
  id     String   @id @default(uuid())
  name   String
  email  String   @unique
  phone  String?
  active Boolean  @default(true)
  createdAt DateTime @default(now())
}